{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "baseUrl": "./",
    "paths": {
      "@controllers": ["src/controllers"],
      "@middleware": ["src/middleware"],
      "@models": ["src/models"],
      "@routes": ["src/routes"],
      "@services": ["src/services"],
      "@utils": ["src/utils"],
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}