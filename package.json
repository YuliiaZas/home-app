{
  "name": "home-app",
  "version": "1.0.0",
  "description": "A home management application using Node.js, Express, Mongoose, and TypeScript.",
  "main": "src/app.ts",
  "type": "module",
  "scripts": {
    "start": "tsx src/app.ts",
    "build": "tsc",
    "dev": "ts-node-dev src/app.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.2",
    "express": "^4.17.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.8.7"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.0.0",
    "tsx": "^4.20.5",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "license": "MIT"
}
